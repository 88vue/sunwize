<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Location Permissions -->
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>Sunwize needs location access to track UV exposure when you're outside and monitor whether you're indoors or outdoors for accurate tracking.</string>

    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Sunwize needs location access to track UV exposure when you're outside.</string>

    <key>NSLocationAlwaysUsageDescription</key>
    <string>Sunwize needs continuous location access to track UV exposure in the background when you're outside.</string>

    <!-- Camera Permission -->
    <key>NSCameraUsageDescription</key>
    <string>Sunwize needs camera access to capture photos of skin spots for body scan tracking.</string>

    <!-- Photo Library Permission -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>Sunwize needs access to your photo library to select images for body scan tracking.</string>

    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>Sunwize needs permission to save body scan photos to your photo library.</string>

    <!-- Background Modes -->
    <key>UIBackgroundModes</key>
    <array>
        <string>location</string>
        <string>fetch</string>
        <string>processing</string>
    </array>

    <!-- Background Task Identifiers -->
    <key>BGTaskSchedulerPermittedIdentifiers</key>
    <array>
        <string>com.sunwize.uvtracking</string>
        <string>com.sunwize.dailymaintenance</string>
    </array>

    <!-- App Transport Security for API calls -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
        <key>NSExceptionDomains</key>
        <dict>
            <!-- Add your API domains here if they don't support HTTPS -->
            <key>currentuvindex.com</key>
            <dict>
                <key>NSIncludesSubdomains</key>
                <true/>
                <key>NSTemporaryExceptionAllowsInsecureHTTPLoads</key>
                <false/>
            </dict>
        </dict>
    </dict>

    <!-- Sign in with Apple -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>com.sunwize.app</string>
            </array>
        </dict>
    </array>
</dict>
</plist>